    "chai": "^4.1.2",
    "mocha": "^5.0.5",
    "nyc": "^13.3.0",
    "sinon": "^7.2.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  },
  "nyc": {
    "include": [
      "build-tests/source/*.js"
